@model IEnumerable<WebBanHangOnline.Models.EF.New>
@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_responsive.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
@if (Model != null && Model.Any())
{
    <div class="blogs"  style="margin-top:190px">
        <div class="container">
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Trang chủ</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Tin tức</a></li>
                </ul>
            </div>
            <div class="row">
                @*<div class="col text-center">
                <div class="section_title">
                    <h2>Tin tức</h2>
                </div>
            </div>*@
            </div>
            <div class="row blogs_container">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 blog_item_col">
                        <div class="blog_item">
                            <div class="blog_background" style="background-image:url(@item.Image)"></div>
                            <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                                <h4 class="blog_title">@item.Title</h4>
                                <span class="blog_meta">@item.CreatedDate.ToString("dd/MM/yyyy")</span>
                                <a class="blog_more" href="/new/Newdetail/@item.Id">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}