@model WebBanHangOnline.Models.EF.New
@{
    ViewBag.Title = "Chi tiết bài viết";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/contact_responsive.css">

<section id="about-us" class="m-b-30">
    <div class="container" style="margin-top:170px">
        <div class="breadcrumbs d-flex flex-row align-items-center">
            <ul>
                <li><a href="/">Trang chủ</a></li>
                <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Tin tức</a></li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div><h2>@Model.Title</h2></div>

                    <div style="margin-left:15px"><h6>@Model.Description</h6></div>
                    <div style="margin-top:20px">
                        <p1 style="color:deepskyblue; margin-left:900px">@Model.CreatedDate</p1>
                    </div>
                    <div><img style="width:40% ; margin-left:300px" src="@Model.Image" /></div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">@Html.Raw(Model.Dentail)</div>
                </div>
            </div>
        </div>
    </div>
</section>